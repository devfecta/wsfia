<%- include ('../template/header') -%>

<section id="sponsorInfo">
    <h1>Sponsor Registration</h1>
    <p class="text-danger"></p>

    <%- message %>

    

    <form name="sponsorForm" id="sponsorForm" action="/conference/sponsor/register" method="POST" class="needs-validation" novalidate>
        <fieldset>
            <legend>Sponsor Information</legend>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="companyName">Company Name</label>
                <input type="text" class="col-sm-10 form-control" name="companyName" id="companyName" size="36" maxlength="48" value="" required />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="contactName">Contact Name</label>
                <input type="text" class="col-md-10 form-control" name="contactName" id="contactName" size="20" maxlength="48" value="" required />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="emailAddress">Contact e-Mail Address</label>
                <input type="email" class="col-md-10 form-control" name="emailAddress" id="emailAddress" size="36" maxlength="128" value="" required />
                <div id="checkResult" style="margin:0 auto; display:inline-block"></div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="contactPhone">Contact Phone Number</label>
                <input type="text" class="col-md-10 form-control" name="contactPhone" id="contactPhone" size="20" maxlength="14" value="" required />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="streetAddress">Street Address</label>
                <input type="text" class="col-sm-10 form-control" name="streetAddress" id="streetAddress" size="48" maxlength="64" value="" required />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="city">City</label>
                <input type="text" class="col-md-10 form-control" name="city" id="city" size="18" maxlength="24" value="" required />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="state">State Abbreviation</label>
                <input type="text" class="col-md-10 form-control" name="state" id="state" size="2" maxlength="2" value="" required />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="zipcode">Zipcode</label>
                <input type="text" class="col-md-10 form-control" name="zipcode" id="zipcode" size="7" maxlength="10" value="" required />
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="companyUrl">Company URL</label>
                <input type="text" class="col-md-10 form-control" name="companyUrl" id="companyUrl" size="128" maxlength="256" value="" />
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="services">Services</label>
                <textarea class="col-md-9 form-control" name="services" id="services" rows="5" maxlength="1024"></textarea>
            </div>
        
        </fieldset>

        <script>
            document.querySelectorAll("input[type=text]").forEach(element => {
                console.log(element.type);
                element.value = "test";
            });
            document.querySelectorAll("input[type=email]").forEach(element => {
                console.log(element.type);
                element.value = "test@email.com";
            });
        </script>

        <fieldset>
            <legend>Available Sponsorships</legend>

            <% session.inventory.forEach(function(orderOption, index) { %>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="sponsorships" id="sponsorship[<%- index %>]" value="<%- orderOption.id %>" data-value="<%- orderOption.description %>" />
                    <label class="form-check-label ml-1 mr-3" for="sponsorship[<%- index %>]"><%- orderOption.description %> - <em>$<%- orderOption.price %></em> <span style="font-size: 90%;">(Availability: <%= (orderOption.inventory > 0) ? orderOption.inventory : (orderOption.inventory < 0) ? "Unlimited" : "Unvailable"; %>)</span></label>
                </div>
            <% }); %>
        </fieldset>
            
        <div class="form-group row">
            <div class="col-md-12 p-5 text-right">
                <a href="/conference" id="cancelButton" style="min-width: 150px; width:25%" class="btn btn-secondary">Cancel</a>
                <button type="submit" id="registerSponsorButton" style="min-width: 150px; width:25%" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function() {
            'use strict';
            window.addEventListener('load', function() {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
                }, false);
            });
            }, false);
        })();
    </script>
    
</section>

<%- include ('../template/footer') -%>